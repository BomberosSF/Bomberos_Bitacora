<div class="col-md-4 mx-auto mt-7">
  <div class="card">
    <div class="card-header text-center">
      <h3>Nueva Novedad</h3>
    </div>
    <div class="card-body">
      <form action="/novedadesAgregar" method="POST">
        <div class="mb-3">
          <label for="Despachador">{{User}}</label>
        </div>
        <div class="mb-3">
          <label for="description">Description:</label>
          <textarea
            name="descripcion"
            class="form-control"
            placeholder="Descripcion"
          ></textarea>
        </div>
        <div class="mb-3">
          <button class="btn btn-primary w-100" type="submit">
          Guardar Novedad
          </button>
        </div>
        <div class="mb-3">
          <a href="/novedades" class="btn btn-primary w-100">Volver</a>
        </div>
      </form>
      
    </div>
  </div>
</div>


















