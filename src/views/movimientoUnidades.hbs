<h1>Movimiento de Unidades</h1>
</br>
<div>
    <a href="/movimientoAdd" class="btn btn-primary">Agregar Movimiento Nuevo</a>
</div>
</br>
<table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>Num</th>
      <th>Cuartelero</th>
      <th>Autorizo</th>
      <th>Unidad</th>
      <th>Chofer</th>
      <th>Fecha</th>
      <th>Propocito</th>
      <th>Fecha</th>
      <th>Finalizo</th>
      <th>Finalizar</th>
    </tr>
  </thead>
  <tbody>
    {{#each movimiento}}
      <tr>
        <td>{{@index}}</td>
        <td>{{this.cuartelero}}</td>
        <td>{{this.autorizo}}</td>
        <td>{{this.unidad}}</td>
        <td>{{this.chofer}}</td>
        <td>{{this.fechaInicio}}</td>
        <td>{{this.propocito}}</td>
        <td>{{this.fechaFinal}}</td>
        <td>{{this.finalizo}}</td>
        <td>
          <a href="/edit/{{_id}}" class="btn btn-info">Finalizar</a>
        </td>       
      </tr>
    {{/each}}

  </tbody>
</table>
