<div class="container">
  <h1>Crear Nueva Guardia</h1>
  <br />

  <form action="/guardias/crear" method="POST">
    <div class="mb-3">
      <label for="numero" class="form-label">NÃºmero de Guardia:</label>
      <input type="number" name="numero" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="fechaInicio" class="form-label">Fecha de Inicio:</label>
      <input type="datetime-local" name="fechaInicio" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="fechaFin" class="form-label">Fecha de Fin:</label>
      <input type="datetime-local" name="fechaFin" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="oficialDeSemana" class="form-label">Oficial de Semana:</label>
      <select name="oficialDeSemana" class="form-select" required>
        <option disabled selected>Seleccione un Oficial</option>
        {{#each oficialesSemana}}
          <option value="{{this._id}}">{{this.apellido}}, {{this.nombre}} ({{this.rango}})</option>
        {{/each}}
      </select>
    </div>

    <div class="mb-3">
      <label for="superiorDeTurno" class="form-label">Superior de Turno:</label>
      <select name="superiorDeTurno" class="form-select" required>
        <option disabled selected>Seleccione un Superior</option>
        {{#each superioresDeTurno}}
          <option value="{{this._id}}">{{this.apellido}}, {{this.nombre}} ({{this.rango}})</option>
        {{/each}}
      </select>
    </div>

    <div class="mb-3">
      <label class="form-label">Bomberos Asignados:</label>
      <div class="form-check">
        {{#each bomberosAsignables}}
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="bomberosAsignados"
              value="{{this._id}}"
              id="bombero-{{this._id}}">
            <label class="form-check-label" for="bombero-{{this._id}}">
              {{this.apellido}}, {{this.nombre}} ({{this.rango}})
            </label>
          </div>
        {{/each}}
      </div>
    </div>

    {{#if errors.length}}
      <div class="alert alert-danger">
        <ul>
          {{#each errors}}
            <li>{{this.text}}</li>
          {{/each}}
        </ul>
      </div>
    {{/if}}

    <div class="d-grid gap-2">
      <button type="submit" class="btn btn-success">Guardar Guardia</button>
      <a href="/guardias" class="btn btn-secondary">Cancelar</a>
    </div>
  </form>
</div>
