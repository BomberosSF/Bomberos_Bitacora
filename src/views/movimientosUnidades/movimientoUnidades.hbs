<div class="container-fluid mt-4 text-white">
        <h1>Movimiento de Unidades</h1>
      </br>
      <div>
          <a href="/movimientoAdd" class="btn btn-primary">Agregar Movimiento</a>
      </div>
      </br>
      <h2>Movimientos Pendientes</h2>
      <table class="table table-bordered table-hover table-dark">
        <thead>
          <tr>
            {{!-- <th>Num</th> --}}
            <th>Unidad</th>
            <th>Cuartelero</th>
            <th>Autorizo</th>           
            <th>Chofer</th>
            <th>Fecha</th>
            <th>Propocito</th>
            <th>KM</th>
            <th>Fecha</th>
            <th>Finalizo</th>
            <th>Finalizar</th>
          </tr>
        </thead>
        <tbody>
          {{#each movimiento}}
              <tr>
                <form action="/movimiento/finalizar/{{_id}}" method="POST">
                  {{!-- <td>{{@index}}</td> --}}
                  <td>{{this.unidad}}</td>
                  <td>{{this.cuartelero}}</td>
                  <td>{{this.autorizo}}</td>
                  <td>{{this.chofer}}</td>
                  <td>{{this.fechaInicio}}</td>
                  <td>{{this.propocito}}</td>
                  <td><input type="text" name="km" placeholder="Agregar KM"></td>
                  <td><input type="datetime-local" name="fechaFinal"></td>
                  <td>{{this.finalizo}}</td>
                  <td>
                    <button type="submit" class="btn btn-info">Finalizar</button>
                  </td>
                  <input type="hidden" name="_id" value="{{this._id}}">
                </form>
              </tr>
            {{/each}}

          </tbody>
        </table>
      </br>
      <h2>Movimientos Finalizados:</h2>
      <table class="table table-bordered table-hover table-dark">
        <thead>
          <tr>
            {{!-- <th>Num</th> --}}
            <th>Unidad</th>
            <th>Cuartelero</th>
            <th>Autorizo</th>           
            <th>Chofer</th>
            <th>Fecha</th>
            <th>Propocito</th>
            <th>Fecha Fin</th>
          </tr>
        </thead>
        <tbody>
          {{#each movimientoTerminado}}
            <tr>
              {{!-- <td>{{@index}}</td> --}}
              <td>{{this.unidad}}</td>
              <td>{{this.cuartelero}}</td>
              <td>{{this.autorizo}}</td> 
              <td>{{this.chofer}}</td>
              <td>{{this.fechaInicio}}</td>
              <td>{{this.propocito}}</td>
              <td>{{this.fechaFinal}}</td>
            </tr>
          {{/each}}

        </tbody>
      </table>
      

</div>

