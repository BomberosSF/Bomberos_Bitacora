<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header text-center">
      <h3>LogIn Despachador</h3>
    </div>
    <div class="card-body">
      <form action="/login" method="POST">
        <div class="mb-3">
            <label for="title">Despachador:</label>
            <br>
            <select name="despachador">
              {{#each bombero}}
              <option value="{{this.nombre}}">{{this.apellido}}, {{this.nombre}}</option>
              {{/each}}
            </select>   
        </div>
        <div class="mb-3">
        <label for="title">Pasword:</label>
        <input
            type="password"
            name="password"
            class="form-control"
        />
        </div>    
        <button class="btn btn-primary w-100" type="submit">
          Entrar
        </button>
      </form>
      
    </div>
  </div>
</div>
